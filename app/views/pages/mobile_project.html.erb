        color: #d35400;
      }
      .project-link:hover {
        color: #3B9F22;
        font-weight: bold;
      }
    }

    .outer-circle {
      width: 12px;
      height: 12px;
      background-color: grey; /* Outer circle color */
      border-radius: 50%;     /* Makes it a circle */
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .inner-circle {
      width: 6px;
      height: 6px;
      background-color: white; /* Inner circle color */
      border-radius: 50%;      /* Makes it a circle */
    }

    .c-item h4 {
      display: flex;
      gap: 24px;
      span {
        margin-top: auto;
      }
    }

    .switch {
      position: relative;
      display: inline-block;
      width: 70px;
      height: 25px;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: #FFFFFF;
      transition: .4s;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 11px;
      width: 11px;
      left: 7px;
      bottom: 7px;
      background: #707070;
      transition: .4s;
    }

