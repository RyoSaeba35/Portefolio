      border-radius: 34px;
    }

    .slider.round:before {
      border-radius: 50%;
    }

    .progress-bar, .image0, .hidden {
      display: none; /* Initially hide the toggle targets */
    }

    .toggle-trigger {
      cursor: pointer; /* Change cursor to indicate it's clickable */
      text-align: left; /* Align text to the left */
      width: 100%; /* Ensure full width to align properly within the container */
      margin: 0; /* Remove any default margins that might affect alignment */
