<!-- components/_contact_form.html.erb -->
<div class="form">
  <%= simple_form_for :contact, url: contacts_path, method: :post do |f| %>
    <div class="form-group-one">
      <div class="form-group">
        <%= f.input :name, label: "", placeholder: "Votre nom et prÃ©nom", required: true %>
        <%= f.error :name, class: 'error-message' %>
      </div>
      <div class="form-group">
        <%= f.input :email, label: "", placeholder: "Votre adresse mail", required: true %>
        <%= f.error :name, class: 'error-message' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.input :message, as: :text, label: "", placeholder: "Message", required: true %>
      <%= f.error :name, class: 'error-message' %>
    </div>
    <div class="form-group-btn">
      <%= f.button :submit, "Envoyer", class: "btn" %>
    </div>
  <% end %>
</div>

<style>
  .error-message {
    color: red;
    font-size: 0.875em;
    margin-top: 0.25em;
  }
  @media (max-width: 842px) {
    .form-pair {
      display: flex;
      flex-direction: column;
      width: 100%;
      justify-content: space-between;
    }

    /* .form-pair .form-group {
      width: 45%;
    } */

    .form-group input {
      background-color: white;
      border-radius: 8px;
      border: 1px solid #D9D9D9;
    }

    .form-group input:focus {
      background-color: white;
    }

    .form-group textarea {
      background-color: white;
      border-radius: 8px;
      border: 1px solid #D9D9D9;
      height: 240px;
      width: 100%;
      padding: 16px;
      border: none;
    }

    .form-group textarea:focus {
      background-color: white;
    }

    .form-group-one {
      display: flex;
      flex-direction: column;
      margin-top: 32px;
      margin-bottom: 0px;
      gap: 18px;
      width: 100%;
      .form-group {
        width: 100%;
      };
      .form-group input {
        width: 100%;
        padding: 8px 16px;
        border: none;
      }
    }

    .simple_form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    .form-group-btn {
      display: flex;
      justify-content: end;
      .btn {
        // border: 1px solid grey;
        background: white;
        border-radius: 8px;
        border: 1px solid #D9D9D9;
        padding: 8px 36px
      }
    }
    .btn:hover {
      background: #EDEDED;
    }
  }
</style>
